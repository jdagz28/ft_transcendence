{
  "type": "object",
  "$id": "schema:auth:login",
  "required": [
    "username",
    "password"
  ],
  "properties": {
    "username": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_!$#-]{3,15}$"
    },
    "password": {
      "type": "string",
      "minLength": 8,
      "maxLength": 20
    }
  },
  "additionalProperties": false
}