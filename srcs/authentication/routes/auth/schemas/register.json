{
  "type": "object",
  "$id": "schema:auth:register",
  "required": [
    "username",
    "password",
    "email"
  ],
  "properties": {
    "username": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_!$#-]{3,15}$"
    },
    "password": {
      "type": "string",
      "minLength": 8,
      "maxLength": 20,
      "pattern": "^(?=.*[A-Z])(?=.*\\d)(?=.*[!@#$%^&*()_+\\-=\\[\\]{};':\"\\\\|,.<>\\/?]).{8,20}$"
    },
    "email": {
      "type": "string",
      "format": "email"
    }
  },
  "additionalProperties": false
}