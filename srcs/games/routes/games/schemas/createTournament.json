{
  "type": "object",
  "$id": "schema:games:createTournament",
  "required": [
    "name",
    "mode",
    "maxPlayers"
  ],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "mode": {
      "type": "string",
      "enum": [
        "solo",
        "duo",
        "online"
      ]
    },
    "maxPlayers": {
      "type": "integer",
      "minimum": 2,
      "maximum": 100,
      "multipleOf": 2
    }
  }
}