{
  "type": "object",
  "$id": "schema:games:createGame",
  "required": [ "mode", "maxPlayers" ],
  "properties": {
    "mode": {
      "type": "string",
      "enum": [ 
        "training" ,
        "single-player", 
        "local-multiplayer",
        "online-multiplayer" ]
    },
    "maxPlayers": {
      "type": "integer",
      "minimum": 1,
      "maximum": 10
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "mode": {
            "enum": ["local-multiplayer", "online-multiplayer"]
          }
        }
      },
      "then": {
        "properties": {
          "maxPlayers": {
            "allOf": [
              { "$ref": "#/properties/maxPlayers" },
              { "type": "integer", "minimum": 2 }
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "mode": { "enum": ["training", "single-player"] }
        }
      },
      "then": {
        "properties": {
          "maxPlayers": {
            "allOf": [
              { "$ref": "#/properties/maxPlayers" },
              { "type": "integer", "maximum": 1 }
            ]
          }
        }
      }
    }
  ]
}