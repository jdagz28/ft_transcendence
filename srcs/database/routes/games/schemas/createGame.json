{
  "type": "object",
  "$id": "schema:games:createGame",
  "required": [ "mode" ],
  "properties": {
    "mode": {
      "type": "string",
      "enum": [ 
        "training" ,
        "single-player", 
        "local-multiplayer",
        "online-multiplayer" ]
    },
    "maxPlayers": {
      "type": "integer",
      "minimum": 1,
      "maximum": 4
    }
  }
}