{
  "type": "object",
  "$id": "schema:games:createTournament",
  "required": [
    "name",
    "mode",
    "maxPlayers"
  ],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "mode": {
      "type": "string",
      "enum": [
        "solo",
        "duo",
        "online"
      ]
    },
    "maxPlayers": {
      "type": "integer",
      "minimum": 2,
      "maximum": 100,
      "multipleOf": 2
    }
  }, 
  "allOf": [
    {
      "if": {
        "properties": {
          "mode": {
            "enum": ["solo"]
          }
        }
      },
      "then": {
        "properties": {
          "maxPlayers": {
            "allOf": [
              { "$ref": "#/properties/maxPlayers" },
              { "type": "integer", "maximum": 1 }
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "mode": { "enum": ["duo"] }
        }
      },
      "then": {
        "properties": {
          "maxPlayers": {
            "allOf": [
              { "$ref": "#/properties/maxPlayers" },
              { "type": "integer", "maximum": 2 }
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "mode": { "enum": ["online"] }
        }
      },
      "then": {
        "properties": {
          "maxPlayers": {
            "allOf": [
              { "$ref": "#/properties/maxPlayers" },
              { "type": "integer", "minimum": 2 }
            ]
          }
        }
      }
    }
  ]
}