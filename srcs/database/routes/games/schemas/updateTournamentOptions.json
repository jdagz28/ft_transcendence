{
  "type": "object",
  "$id": "schema:games:updateTournamentOptions",
  "required": [ "num_games", "num_matches" ],
  "properties": {
    "num_games": { 
      "type": "integer", 
      "minimum": 1, 
      "maximum": 3,
      "default": 1
    },
    "num_matches": { 
      "type": "integer", 
      "minimum": 1, 
      "maximum": 5,
      "default": 1
    },
    "ball_speed": {
      "type": "integer",
      "minimum": 1,
      "maximum": 5,
      "default": 1
    },
    "death_timed": {
      "type": "boolean",
      "default": false
    },
    "time_limit": {
      "type": "integer",
      "minimum": 0,
      "maximum": 60,
      "default": 0
    }
  } 
}