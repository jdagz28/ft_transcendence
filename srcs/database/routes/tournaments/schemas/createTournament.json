{
  "type": "object",
  "$id": "schema:tournaments:createTournament",
  "required": [
    "name",
    "maxPlayers",
    "gameMode",
    "gameType"
  ],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "maxPlayers": {
      "type": "integer",
      "enum": [4, 8, 16],
      "default": 4
    },
    "gameType": {
      "type": "string",
      "enum": [ 
        "singles",
        "doubles"
      ]
    },
    "gameMode": {
      "type": "string",
      "enum": [ 
        "public",
        "private"
      ]
    }
  }
}