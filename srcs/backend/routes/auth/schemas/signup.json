{
  "type": "object",
  "$id": "schema:auth:signup",
  "required": [
    "username",
    "password",
    "email"
  ],
  "properties": {
    "username": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_]{3,20}$",
      "minLength": 3,
      "maxLength": 20
    },
    "password": {
      "type": "string",
      "minLength": 8,
      "maxLength": 100
    },
    "email": {
      "type": "string",
      "format": "email"
    }
  }
}